extends layout

block content
  h1= title
  p Welcome to #{title}
  p Hello, world! Thanks for visiting my website.
  button(type="button", class="btn btn-primary", onclick="doReduce()") Reduce

  // Add the following lines to include Bootstrap
  block head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js", integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N", crossorigin="anonymous")
    
  // Add the following script to handle button click and update the count
  script.
    var count = 20;
    var change = -1;
    
    function doReduce() {
      count += change;
      change -= 1;
      document.getElementById('reduce').innerText = 'Count ' + count + ' with change ' + change;
    }
    
  // Add the following div to display the count and change
  div#reduce Reduce the value.
