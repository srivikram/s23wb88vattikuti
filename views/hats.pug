extends layout

block content
  h1= title
  p Welcome to #{title}
  .container-fluid
    .row
      - let results = [          { hat_type: "Baseball Cap", color: "Red", price: 12.99 },          { hat_type: "Fedora", color: "Black", price: 29.99 },          { hat_type: "Beanie", color: "Blue", price: 9.99 }        ]
      each item in results
        .col-sm-2
          h2= item.hat_type
          p Color: #{item.color}
          p Price: $#{item.price.toFixed(2)}
  a(href="/hats") View all Hats